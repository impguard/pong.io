{
  "name": "pong.io",
  "version": "1.0.0",
  "description": "A simple pong game",
  "main": "src/server/server.js",
  "repository": "git@github.com:impguard/pong.io.git",
  "author": "contact@kevinwu.io",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:client": "webpack --config src/client/webpack.config.js",
    "build:server": "tsc --build src/server/tsconfig.json",
    "run:server": "node dist/server/server/server.js",
    "run:client": "http-server dist/client",
    "live:client": "concurrently 'webpack --config src/client/webpack.config.js --watch' 'yarn run:client'",
    "live:server": "nodemon -e 'ts' --watch 'src/server' --watch 'src/shared' --exec npx ts-node --project src/server/tsconfig.json src/server/server.ts"
  },
  "dependencies": {
    "@types/lodash": "^4.14.116",
    "jquery": "^3.3.1",
    "koa": "^2.5.2",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "matter-js": "^0.14.2",
    "pixi.js": "^4.8.2",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "@types/jquery": "^3.3.9",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.31",
    "@types/matter-js": "^0.10.1",
    "@types/node": "^10.9.4",
    "@types/pixi.js": "^4.8.0",
    "@types/socket.io": "^1.4.38",
    "@types/socket.io-client": "^1.4.32",
    "concurrently": "^4.0.1",
    "copy-webpack-plugin": "^4.5.2",
    "http-server": "^0.11.1",
    "nodemon": "^1.18.4",
    "ts-loader": "^5.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2",
    "webpack-command": "^0.4.1",
    "yarn": "^1.9.4"
  }
}
